<h2 class="text-center text-2xl font-semibold py-2">
    Register
</h2>

<form class="pl-2 pt-1" method="POST" action="register">
    <div class="py-1"> 
        <label for="email">Your email: </label>
        <input class="border-2 rounded-sm border-black" type="email" required name="email" value="">      
    </div>
    <div class="py-1">
        <label for="username">Username: </label>
        <input class="border-2 rounded-sm border-black" type="text" name="username" value="">
    </div>
    <div class="py-1">
        <label for="password">Password: </label>
        <input class="border-2 rounded-sm border-black" type="password" name="password" value="">      
    </div>
    <div class="py-1">
        <input class="border-2 rounded-sm border-black p-1 bg-slate-200 hover:bg-slate-300" type="submit" value="register">
    </div>
</form>