<h2 class="text-center text-2xl font-semibold py-2">
    Newsstand
</h2>

<a href="/news/add">
    <div class="block bg-slate-600 text-center text-white hover:bg-slate-500">
        Write a news article
    </div>
</a>

<div class="grid grid-cols-8 gap-y-1 py-3 px-12">
    <p class="font-semibold col-span-6">Title</p>
    <p class="text-center font-semibold">Post Time</p>
    <p class="text-center font-semibold">Views</p>
    
    {{#each articles}}
    <a class="hover:font-medium col-span-6" href="/news/{{slug}}">{{title}}</a>
    <p class="text-center">{{postedTime}}</p>
    <p class="text-center">{{views}}</p>
    {{/each}}
</div>

<hr class="py-2">

<div class="w-max mx-auto">
    <form method="GET" action="/news">
        <label for="searchQuery">Search: </label>
        <input class="border-2 rounded-sm border-black w-[200px]" type="text" name="searchQuery" value="">
        <input class="border-2 rounded-sm border-black px-2 bg-slate-200 hover:bg-slate-300" type="submit" value="search">
    </form>
</div>